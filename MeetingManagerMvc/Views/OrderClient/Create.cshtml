@model MeetingManager.Models.NewOrderModel

@{
    ViewData["Title"] = "Create reservation";
}

<h1>Create</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <h4>Confirm data below before create an order !</h4>
        <h5> @Model.Offer.Title </h5>
        <p> @Model.Offer.Description </p>
        <p>From: @Model.CartLineItem.From</p>
        <p>To: @Model.CartLineItem.To</p>
        <p>Total price: @Model.CartLineItem.TotalPrice</p>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Offer" value="@Model.Offer" />
            <input type="hidden" asp-for="CartLineItem" value="@Model.CartLineItem" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

