@model MeetingManager.Models.LineItemModel

@{
    ViewData["Title"] = "Confirm reservation";
}

<section class="contact_area section_gap">
    <div class="container">
        <div class="row justify-content-center align-items-center flex-column">
            <div class="col-sm-12" style="text-align:center;">
                <h2 class="title_color">Confirm add reservation to cart</h2>
                <p>Please check reservation details. Select bookin day and leave day!</p>
            </div>
        </div>
        <div class="row confirm-add-to-cart-row">
            <div class="col-sm-8">
                <div class="confirm-reservation-offert">
                    <div class="confirm-reservation-offert-image">
                    </div>
                    <div class="confirm-reservation-text">
                        <h3 style="padding-left:25px; padding-top:25px;">@Html.DisplayFor(model => model.Offer.Title)</h3>
                        <p style="padding-left:25px;padding-right:15px;">Description: @Html.DisplayFor(model => model.Offer.Description)</p>
                        <p style="padding-left:25px;">Price: <b>@Html.DisplayFor(model => model.Offer.Price) /day</b></p>
                    </div>
                </div>
                <form asp-action="Add" style="margin-top:25px;">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group" style="text-align:center;">
                        <label asp-for="From" class="control-label"></label>
                        <input asp-for="From" class="form-control date-input" />
                        <span asp-validation-for="From" class="text-danger"></span>

                        <label asp-for="To" class="control-label"></label>
                        <input asp-for="To" class="form-control date-input" />
                        <span asp-validation-for="To" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="text-align:center;">
                        <input asp-for="OfferId" type="hidden" value="@Model.Offer.Id" />
                        <input type="submit" value="Submit reservation" class="btn theme_btn button_hover" />
                        <a asp-controller="OfferClient" asp-action="Details" asp-route-id="@Model.Offer.Id" class="btn button_hover theme_btn_two">Back to details</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
