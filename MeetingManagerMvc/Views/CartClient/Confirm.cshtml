@model MeetingManager.Models.LineItemModel

@{
    ViewData["Title"] = "Confirm reservation";
}

<section class="contact_area section_gap">
    <div class="container">
        <div class="row justify-content-center align-items-center flex-column">
            <div class="col-sm-12">
                <h2 class="title_color">Add reservation for @Html.DisplayFor(model => model.Offer.Title)</h2>
            </div>
            <div class="col-sm-12">
                <p>@Html.DisplayFor(model => model.Offer.Description)</p>
                <p>@Html.DisplayFor(model => model.Offer.Price) /day</p>
            </div>
            <div class="col-lg-6 col-sm-10">
                <form asp-action="Add">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <span class="text-danger">
                            @ViewBag.Message
                        </span>
                    }
                    <div class="form-group">
                        <label asp-for="From" class="control-label"></label>
                        <input asp-for="From" class="form-control" />
                        <span asp-validation-for="From" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="To" class="control-label"></label>
                        <input asp-for="To" class="form-control" />
                        <span asp-validation-for="To" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="OfferId" type="hidden" value="@Model.Offer.Id" />
                        <input type="submit" value="Submit reservation" class="btn btn-primary" />
                    </div>
                    <div class="form-group">
                        <button type="submit" value="submit" class="btn theme_btn button_hover">Confirm <i class="fas fa-sign-in-alt"></i></button>
                    </div>
                </form>
            </div>
            <div class="col-sm-12">
                <a asp-controller="OfferClient" asp-action="Details" asp-route-id="@Model.Offer.Id" class="button_hover theme_btn_two">Back to details</a>
            </div>
        </div>
    </div>
</section>
