@model MeetingManager.Models.CartLineItem

@{
    ViewData["Title"] = "Edit lineitem";
}

<section class="contact_area section_gap">
    <div class="container">
        <div class="row justify-content-center align-items-center flex-column">
            <div class="col-sm-12">
                <h2 class="title_color">Edit pending reservation</h2>
            </div>
            <div class="col-sm-12">
                <h3>@Html.DisplayFor(model => model.Name)</h3>
            </div>
            <div class="col-lg-6 col-sm-10">
                <form asp-action="Add">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="From" class="control-label"></label>
                        <input asp-for="From" class="form-control" />
                        <span asp-validation-for="From" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="To" class="control-label"></label>
                        <input asp-for="To" class="form-control" />
                        <span asp-validation-for="To" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="CartId" />
                        <input asp-for="Name" class="form-control" type="hidden" />
                        <input asp-for="TotalPrice" class="form-control" type="hidden" />
                        <input asp-for="OfferId" class="form-control" type="hidden" />
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                    <div class="form-group">
                        <button type="submit" value="submit" class="btn theme_btn button_hover">Confirm <i class="fas fa-sign-in-alt"></i></button>
                    </div>
                </form>
            </div>
            <div class="col-sm-12">
                <a asp-action="Index" class="button_hover theme_btn_two">Back to list</a>
            </div>
        </div>
    </div>
</section>
