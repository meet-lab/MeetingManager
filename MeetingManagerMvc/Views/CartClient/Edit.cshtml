@model MeetingManager.Models.CartLineItem

@{
    ViewData["Title"] = "Edit lineitem";
}

<section class="contact_area section_gap">
    <div class="container">
        <div class="row justify-content-center align-items-center flex-column">
            <div class="col-sm-12" style="text-align:center;">
                <h2 class="title_color">Change your reservation data!</h2>
                <p>Change arrival date or leave date using this form!</p>
            </div>
        </div>
        <div class="row confirm-add-to-cart-row">
            <div class="col-sm-8" style="margin-top:50px;display:flex">
                <div class="edit-reservation-form-image">
                    <img src="~/image/organizer.svg" alt="plan_it" />
                </div>
                <form asp-action="Edit" class="edit-line-item-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <h3>@Html.DisplayFor(model => model.Name)</h3>
                    <div class="form-group">
                        <label asp-for="From" class="control-label"></label>
                        <input asp-for="From" class="form-control date-input" />
                        <span asp-validation-for="From" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="To" class="control-label"></label>
                        <input asp-for="To" class="form-control date-input" />
                        <span asp-validation-for="To" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="CartId" />
                        <input asp-for="Name" class="form-control" type="hidden" />
                        <input asp-for="TotalPrice" class="form-control" type="hidden" />
                        <input asp-for="OfferId" class="form-control" type="hidden" />
                        <input type="submit" value="Save" class="btn theme_btn button_hover" />
                        <a asp-action="Index" class="btn button_hover theme_btn_two">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>



