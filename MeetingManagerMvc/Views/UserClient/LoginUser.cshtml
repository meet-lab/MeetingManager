@model MeetingManager.Models.LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="contact_area section_gap">
    <div class="container">
        <div class="row justify-content-center align-items-center flex-column">
            <div class="col-sm-12">
                <h2 class="title_color">Login</h2>
            </div>
            <div class="col-lg-6 col-sm-10">
                <form asp-action="LoginUser">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <span class="text-danger">
                            @ViewBag.Message
                        </span>
                    }
                    @Html.HiddenFor(x => x.ReturnUrl)
                    <div class="form-group">
                        <label asp-for="EmailAddressOrUserName" class="control-label"></label>
                        <input asp-for="EmailAddressOrUserName" class="form-control" />
                        <span asp-validation-for="EmailAddressOrUserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input asp-for="RememberLogin" /> @Html.DisplayNameFor(model => model.RememberLogin)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" value="submit" class="btn theme_btn button_hover">Login <i class="fas fa-sign-in-alt"></i></button>
                    </div>
                    <p>Dont have account? <a href="RegistryUser">Register now!</a></p>
                </form>
            </div>
            <div class="col-sm-12">
                <a asp-controller="Home" asp-action="Index">Back to Home page</a>
            </div>
        </div>

    </div>
</section>
