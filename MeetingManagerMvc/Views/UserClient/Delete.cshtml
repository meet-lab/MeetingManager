@model MeetingManagerMvc.Models.UserRegistryModel

@{
    ViewData["Title"] = "Delete user";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    string userId = "";
}

@if (User.Identity.IsAuthenticated)
{

    @foreach (var claim in User.Claims)
    {
        @if (claim.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/nameidentifier")
        {
            userId = claim.Value;
        }
    }
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>User</h4>
    <hr />
    <form asp-action="Delete">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserName)
            </dd>
        </dl>
        <div style="color: red;">@ViewBag.Message</div>
        <div class="form-group">
            <label class="control-label">To confirm input password</label>
            <input asp-for="RepeatPassword" class="form-control" />
            <span asp-validation-for="RepeatPassword" class="text-danger"></span>
        </div>
        <input asp-for="Password" type="hidden" />
        <input type="hidden" asp-for="@userId" />
        <input type="hidden" asp-for="UserName" />
        <input type="hidden" asp-for="EmailAddress" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-controller="UserDetailClient" asp-action="Index" class="button_hover theme_btn_two">Back to List</a>
    </form>
</div>
