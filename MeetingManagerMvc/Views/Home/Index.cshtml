<!--================ Facilities Area  =================-->
<section class="facilities_area section_gap">
    <div class="overlay bg-parallax" data-stellar-ratio="0.8" data-stellar-vertical-offset="0" data-background="">
    </div>
    <div class="container">
        <div class="section_title text-center">
            <h2 class="title_w">Check out our offers</h2>
            <p>We all live in an age that belongs to the young at heart. Life that is becoming extremely fast, don't waste it!</p>
        </div>
        <div class="row mb_30 justify-content-center">
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
            <div class="col-lg-4 col-md-6">
                <div class="facilities_item custom_facilities">
                    <div class="items_background_image">
                    </div>
                    <div class="facilities_item_custom_text_arear">
                        <h4><i class="lnr lnr-dinner"></i>@Html.DisplayFor(modelItem => item.Title)</h4>
                        <span style="text-align:center;width:100%;">$ @Html.DisplayFor(modelItem => item.Price)<small>/day</small></span>
                        <br />
                        <a asp-action="Details" asp-controller="OfferClient" asp-route-id="@item.Id" class="btn theme_btn button_hover" style="margin-top:50px;">Check offert!</a>
                    </div>
                </div>
            </div>
                }
            }
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col col-sm-12" style="text-align:center; margin-top:50px;">
                <a href="#" class="btn theme_btn button_hover">Explore more offerts!</a>
            </div>
        </div>
    </div>
</section>
